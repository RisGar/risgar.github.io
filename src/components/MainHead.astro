---
import "../styles/global.scss"

const {
  title = "Rishab Garg - Portfolio",
  description = "Portfolio of Rishab Garg",
} = Astro.props
---

<!--Metadata -->
<meta charset="UTF-8" />
<meta property="og:type" content="website" />
<meta property="og:site_name" content="Rishab Garg" />
<meta property="og:title" content="Rishab Garg" />
<meta name="description" property="og:description" content={description} />
<meta property="og:url" content="https://risgar.github.io/" />
<!--<meta property="og:image" content="https://www.example.com/example.png" /> -->
<meta name="twitter:card" content="summary_large_image" />
<meta content="#ff3e00" data-react-helmet="true" name="theme-color" />
<link rel="icon" href="/favicon.ico" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{title}</title>

<!--Google Fonts -->
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Noto+Sans&display=swap"
  rel="stylesheet"
/>
