---
import MainHead from "@components/MainHead.astro"
import Footer from "@components/Footer.svelte"
import Nav from "@components/Nav.svelte"
import PortfolioPreview from "@components/PortfolioPreview.svelte"

const articles = (await Astro.glob("./blog/**/*.md"))
  .filter(({ frontmatter }) => Boolean(frontmatter.publishDate))
  .sort(
    (a, b) =>
      new Date(b.frontmatter.publishDate).valueOf() -
      new Date(a.frontmatter.publishDate).valueOf()
  )
---

<html lang="en">
  <head>
    <MainHead
      title="All Articles | Rishab Garg"
      description="Rishab Garg's blog articles"
    />
    <style lang="scss">
      .grid {
        display: grid;
        grid-gap: 3rem;
      }
    </style>
  </head>

  <body>
    <Nav />
    <div class="wrapper">
      <h1 class="title mt4 mb4">All Articles</h1>
      <div class="grid">
        {articles.map((article) => <PortfolioPreview article={article} />)}
      </div>
    </div>
    <Footer />
  </body>
</html>
